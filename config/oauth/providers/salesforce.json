{
  "provider": "salesforce",
  "issuer": "https://login.salesforce.com",
  "authorization_endpoint": "https://login.salesforce.com/services/oauth2/authorize",
  "token_endpoint": "https://login.salesforce.com/services/oauth2/token",
  "revocation_endpoint": "https://login.salesforce.com/services/oauth2/revoke",
  "grant_types_supported": [
    "authorization_code",
    "authorization_code_pkce",
    "refresh_token",
    "jwt_bearer",
    "saml_bearer_assertion"
  ],
  "token_endpoint_auth_methods_supported": [
    "client_secret_post",
    "client_secret_basic",
    "private_key_jwt"
  ],
  "default_scopes": [
    "api",
    "refresh_token",
    "offline_access"
  ],
  "tenant_discovery": {
    "supports_instance_discovery": true,
    "sandbox_issuer": "https://test.salesforce.com"
  },
  "notes": "Use 'https://test.salesforce.com' for sandbox auth. Expect 'instance_url' in token response."
}

