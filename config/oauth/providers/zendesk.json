{
  "provider": "zendesk",
  "issuer": "https://{subdomain}.zendesk.com",
  "authorization_endpoint": "https://{subdomain}.zendesk.com/oauth/authorizations/new",
  "token_endpoint": "https://{subdomain}.zendesk.com/oauth/tokens",
  "revocation_endpoint": "https://{subdomain}.zendesk.com/oauth/revocations",
  "grant_types_supported": [
    "authorization_code",
    "authorization_code_pkce",
    "refresh_token",
    "client_credentials"
  ],
  "token_endpoint_auth_methods_supported": [
    "client_secret_post",
    "client_secret_basic"
  ],
  "default_scopes": [
    "read",
    "write",
    "read_write"
  ],
  "template_params": {
    "subdomain": "your-subdomain"
  }
}

