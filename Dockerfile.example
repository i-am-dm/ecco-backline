# Ecco Backline - Reference Dockerfile
# This demonstrates the build pattern for the Actions Platform

FROM node:20-alpine AS build
WORKDIR /app

# Copy package files and workspace configuration
COPY package*.json tsconfig.base.json ./
COPY apps ./apps
COPY packages ./packages
COPY config ./config

# Install dependencies and build
RUN npm ci --only=production=false
RUN npm run build

# Production stage
FROM node:20-alpine AS production
WORKDIR /app

# Set production environment
ENV NODE_ENV=production
ENV PORT=3030

# Copy built application
COPY --from=build /app/apps/actions-platform/dist ./apps/actions-platform/dist
COPY --from=build /app/packages ./packages
COPY --from=build /app/config ./config
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/package*.json ./

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:$PORT/health || exit 1

EXPOSE 3030

# Run the application
CMD ["node", "apps/actions-platform/dist/index.js"]
